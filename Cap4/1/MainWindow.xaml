<Window
        x:Class="Cap4_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cap4_5"
        mc:Ignorable="d"
        Title="Tablas de multiplicar"
        Height="450"
        Width="400">
    <Grid Margin="20, 10">
        <StackPanel Orientation="Vertical">
            <!-- <Grid> -->
            <StackPanel Orientation="Vertical">
                <Label HorizontalAlignment="Left">Ingrese el numero del que desea saber la tabla: </Label>
                <StackPanel Orientation="Horizontal">
                    <TextBox
                            x:Name="NumberTextBox"
                            Width="150" />
                    <Button
                            x:Name="GetTableBtn"
                            Click="OnGetTableClick"
                            Padding="5">Calcular</Button>
                </StackPanel>
                <!-- </Grid> -->
            </StackPanel>

            <ListBox
                    x:Name="TableListBox"
                    Width="100"
                    Height="250"
                    HorizontalAlignment="Left"
                    Margin="0,20,0,0" />
        </StackPanel>

    </Grid>
</Window>