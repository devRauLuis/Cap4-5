<Window
        x:Class="Cap4_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cap4_5"
        mc:Ignorable="d"
        Title="Promedio Edad"
        SizeToContent="WidthAndHeight">
    <Grid Margin="20, 10">
        <StackPanel Orientation="Vertical">
            <!-- <Grid> -->
            <StackPanel Orientation="Vertical">
                <Label>Ingrese las edades en la tabla: </Label>
                <DataGrid x:Name="AgesDataGrid" Width="300" Height="200" />
                <Button
                        x:Name="CalculateBtn"
                        Click="OnCalculateClick"
                        Padding="5">Calcular</Button>
            </StackPanel>
            <TextBlock
                    Margin="0,15,0,0"
                    x:Name="AvgTextBlock"
                    FontSize="24" />
   <TextBlock
                    Margin="0,15,0,0"
                    x:Name="MaxTextBlock"
                    FontSize="24" />   <TextBlock
                    Margin="0,15,0,0"
                    x:Name="MinTextBlock"
                    FontSize="24" />
        </StackPanel>

    </Grid>
</Window>